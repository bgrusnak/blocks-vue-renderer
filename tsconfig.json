{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "pretty": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true, 
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "src/RenderBlocks.tsz", "src/RenderBlocks.tsz"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/test/*",
    "node_modules",
    "**/node_modules/*"
  ]
}
